# Development Dockerfile for hot reload
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --silent

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment variable for React
ENV CHOKIDAR_USEPOLLING=true

# Start development server
CMD ["npm", "start"]
